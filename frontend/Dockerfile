FROM node:22-alpine AS build

WORKDIR /app

COPY package.json package-lock.json ./

RUN npm ci

COPY . .

ARG VITE_API_BASE_URL
ARG VITE_API_PRODUCTS_URL
ARG VITE_API_CATEGORIES_URL
ARG VITE_API_USERS_URL
ARG VITE_API_AUTH_URL
ARG VITE_LOGIN_URL
ARG VITE_VERIFY_2FA_URL
ARG VITE_API_VERIFY_EMAIL_URL

ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_API_PRODUCTS_URL=$VITE_API_PRODUCTS_URL
ENV VITE_API_CATEGORIES_URL=$VITE_API_CATEGORIES_URL
ENV VITE_API_USERS_URL=$VITE_API_USERS_URL
ENV VITE_API_AUTH_URL=$VITE_API_AUTH_URL
ENV VITE_LOGIN_URL=$VITE_LOGIN_URL
ENV VITE_VERIFY_2FA_URL=$VITE_VERIFY_2FA_URL
ENV VITE_API_VERIFY_EMAIL_URL=$VITE_API_VERIFY_EMAIL_URL

RUN npm run build

FROM nginxinc/nginx-unprivileged:alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 8080